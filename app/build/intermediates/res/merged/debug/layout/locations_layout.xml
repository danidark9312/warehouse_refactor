<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativeLayoutBoxLocationsWhReceipt_inflate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/relativeLayoutBoxTrackingsWhReceipt"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableLayout
        android:id="@+id/tableLayoutAddLocationBoxWhLO_inflate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp" >

        <TableRow
            android:id="@+id/tableAddLocationLORow1_inflate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewLocationItemLOLabel_inflate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_span="2"
                android:text="Location"
                android:textSize="19sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableAddLocationLORow2_inflate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <AutoCompleteTextView
                android:id="@+id/editTextDialogItemLocationPlaceLO_inflate"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="0dp"
                android:ems="10"
                android:hint="Loc"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/editTextDialogItemLocationNPiecesLO_inflate"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:ems="10"
                android:hint="# Pc"
                android:inputType="number"
                />
        </TableRow>

        <TableRow
            android:id="@+id/tableAddLocationLORow3_inflate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/buttonDialogAddEachLocationLO_inflate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:text="Add Location"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <!--  table show each lcoations added  -->

    <TableLayout
        android:id="@+id/tableLocationsItemWhReceipt_inflate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tableLayoutAddLocationBoxWhLO_inflate"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tableLayoutAddLocationBoxWhLO_inflate"
        android:background="#D8D8D8" >

        <TableRow
            android:id="@+id/tableListLocationsWhLORow1_inflate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewTitleTableLocationNPiecesItemLOLabel_inflate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="Loc"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTitleTableLocationPlacesItemLOLabel_inflate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="# Pc"
                android:textSize="19sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableListLocationsWhLORow2_inflate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/LineaTotales_inflate"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_span="2"
                android:background="@android:color/holo_blue_light" >
            </FrameLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>
