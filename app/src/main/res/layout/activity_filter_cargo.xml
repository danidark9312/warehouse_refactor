<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:configChanges="keyboardHidden|orientation|screenSize"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    tools:context=".FilterCargoActivity" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayoutFilterPO">

        <LinearLayout
            android:id="@+id/linearResultCargoFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayoutFilterPO"
            android:layout_marginTop="15dp"
            android:layout_weight="0.5"
            android:layout_margin="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp">

            <ListView
                android:id="@+id/listCargoFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#E6E6E6" >
            </ListView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutResume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/relativeLayoutFilterPO"
            android:layout_alignTop="@+id/linearResultCargoFilter"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/linearResultCargoFilter"
            android:background="#f4f4f9"
            android:padding="5dp"
            android:textAlignment="gravity"
            android:visibility="invisible"
            android:layout_weight="0.5"
            android:layout_margin="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="bottom"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="24dp"
                android:layout_marginEnd="24dp">

                <TextView
                    android:id="@+id/lblResumeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Summary"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_margin="5dp">

                    <TableRow
                        android:id="@+id/tableDetalsResumeRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/lblPOResumeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="PO"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblPOResume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="lblPONumber"
                            android:textSize="22sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableDetalsResumeRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/lblIDResumeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="ID"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblIDResume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="lblPONumber"
                            android:textSize="22sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableDetalsResumeRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/lblClientResumeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Client"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblClientResume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="lblPONumber"
                            android:textSize="22sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableDetalsResumeRow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/lblSupplierResumeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Supplier"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblSupplierResume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="lblPONumber"
                            android:textSize="22sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableDetalsResumeRow5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/lblDepResumeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Dep"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblDepResume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="lblDep"
                            android:textSize="22sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableDetalsResumeRow6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/lblRepResumeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Rep"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblRepResume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="lblPONumber"
                            android:textSize="22sp" />
                    </TableRow>
                </TableLayout>

                <Button
                    android:id="@+id/btnLaunchReceiptPane"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="Create WH"
                    android:textSize="45sp"
                    android:layout_height="wrap_content"
                    tools:text="Create WH" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutFilterPO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:gravity="fill_horizontal|top"
        android:height="240dp"
        android:minHeight="200dp"
        android:minWidth="1230dp"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" >

            <TableRow
                android:id="@+id/tableFilterRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/txtFilterPO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="PO"
                    android:textSize="32sp"
                    android:width="@dimen/editText_POSearch_width"
                    style="@android:style/Widget.Holo.Light.EditText" />

                <EditText
                    android:id="@+id/txtFilterTracking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Tracking number"
                    android:textSize="32sp"
                    android:width="@dimen/editText_POSearch_width" />

                <TextView
                    android:id="@+id/lblResumeTotalQueriesKLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="Total Results"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblResumeTotalQueries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="-"
                    android:textSize="22sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableFilterRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <AutoCompleteTextView
                    android:id="@+id/txtClientFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Client"
                    android:textSize="32sp"
                    android:width="@dimen/editText_POSearch_width" />

                <AutoCompleteTextView
                    android:id="@+id/txtSupplierFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Supplier"
                    android:textSize="32sp"
                    android:width="@dimen/editText_POSearch_width" />
            </TableRow>

            <TableRow
                android:id="@+id/tableFilterRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnFilterReceipt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="Search"
                    android:textSize="42sp" />

                <Button
                    android:id="@+id/btnFilterReceiptClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Clear"
                    android:textSize="42sp" />

            </TableRow>
        </TableLayout>
    </RelativeLayout>

</RelativeLayout>